unit Unit11;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm11 = class(TForm)
    MainMenu1: TMainMenu;
    N1: TMenuItem;
    Panel1: TPanel;
    Label1: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Button1: TButton;
    Label2: TLabel;
    Label3: TLabel;
    procedure N1Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form11: TForm11;
  idUser: string;

implementation

{$R *.dfm}

uses Unit2, Unit10, Unit8, Unit9;

procedure TForm11.Button1Click(Sender: TObject);
begin
  DataModule2.Q_v_users.Close;
  DataModule2.Q_v_users.SQL.Text:='SELECT * FROM users WHERE (userPhone = :p_login) AND (userPas = :p_passw)';
  if (Edit1.Text <> '') and (Edit2.Text <> '' )
  then
  begin
    DataModule2.Q_v_users.Parameters.ParamByName ('p_login').Value := Edit1.Text;
    DataModule2.Q_v_users.Parameters.ParamByName('p_passw').Value := Edit2.Text;
    try
      DataModule2.Q_v_users.Open;
    Except
      ShowMessage('Не удалось открыть таблицу пользователей');
      Exit;
    end;
    if DataModule2.Q_v_users.RecordCount > 0
    then
    begin
      ShowMessage('Вход успешно выполнен');
      idUser := DataModule2.Q_v_users.fieldbyname('IDuser').value;
      Form11.Close;
      Form9.Close;
      Form8.Show;
    end
    else
    begin
      ShowMessage('Неправильный логин или пароль');
      Edit1.Text := '';
      Edit2.Text := '';
    end;
  end
  else
    ShowMessage('Пустые поля логина\пароля не допускаются');
end;


procedure TForm11.N1Click(Sender: TObject);
begin
  Close;
end;

end.
