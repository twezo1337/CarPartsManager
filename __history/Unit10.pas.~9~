{$R *.dfm}

uses Unit2;

procedure TForm10.Button1Click(Sender: TObject);
begin
  DataModule2.T_users.Edit; //сначала открыть редактирование
  if DataModule2.T_users.State in [dsEdit, dsInsert] then
    begin // ≈сли находимс€ в режиме редактировани€ или добавлени€ то
        DataModule2.T_users.fieldbyname('userName').value:= Edit1.Text; //потом изменить
        DataModule2.T_users.fieldbyname('userPhone').value:= Edit2.Text; //потом изменить
        DataModule2.T_users.fieldbyname('userMail').value:= Edit3.Text; //потом изменить
        DataModule2.T_users.fieldbyname('userPas').value:= Edit3.Text; //потом изменить
        DataModule2.T_users.post; // —охран€ем запись Ќƒ
    end;
    Close;
  end;
end.
